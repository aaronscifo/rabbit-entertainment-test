{# ... you will probably extend your base template, like base.html.twig #}
{% extends "base.html.twig" %}
{% block body %}

<div class="card" style="width: 18rem;">
  <div class="card-body">
       {{ form_start(form) }}
            <div class="row">
                <div class="col-12">
                    {{ form_row(form.username) }}
                </div>
            </div>
             <div class="row">
                <div class="col-12">
                    {{ form_row(form.email) }}

                </div>
            </div>
             <div class="row">
                <div class="col-12">
                    {{ form_row(form.plainPassword.first) }}
                </div>
            </div>
             <div class="row">
                <div class="col-12">
                    {{ form_row(form.plainPassword.second) }}
                </div>
            </div>
             <div class="row">
                <div class="col-12">
                    <button type="submit">Register!</button>        
                </div>
            </div>
        {{ form_end(form) }}
  </div>

</div>

{% endblock %}
